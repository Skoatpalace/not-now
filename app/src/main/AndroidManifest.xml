<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.notnow">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_logo_principal"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_logo_principal_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <receiver android:name=".NoteAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="com.example.notnow.action.ACTION_NEW_NOTE" />
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/note_app_widget_info"/>
        </receiver>

        <activity
                android:name=".SplashActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".NoteDetailActivity"
                android:parentActivityName=".NoteListActivity"
                android:windowSoftInputMode="adjustResize">
            <meta-data
                    android:name="android.support.PARENT_Activity"
                    android:value=".NoteListActivity"/>
        </activity>
        <activity android:name=".NoteListActivity"/>
    </application>

</manifest>